			<!-- Gulp Plugin for Web Development -->
			<plugin>
				<groupId>com.github.eirslett</groupId>
				<artifactId>frontend-maven-plugin</artifactId>
				<version>${frontend-maven-plugin.version}</version>

				<executions>

					<execution>
						<id>install node and yarn</id>
						<goals>
							<goal>install-node-and-yarn</goal>
						</goals>
						<configuration>
							<workingDirectory>src/main/web</workingDirectory>
							<nodeVersion>${node.version}</nodeVersion>
							<yarnVersion>${yarn.version}</yarnVersion>
						</configuration>
					</execution>

					<execution>
						<id>install node and yarn jhipster</id>
						<goals>
							<goal>install-node-and-yarn</goal>
						</goals>
						<configuration>
							<workingDirectory>src/main/jhipster</workingDirectory>
							<nodeVersion>${node.version}</nodeVersion>
							<yarnVersion>${yarn.version}</yarnVersion>
						</configuration>
					</execution>

					<execution>
						<id>yarn install</id>
						<goals>
							<goal>yarn</goal>
						</goals>
						<configuration>
							<workingDirectory>src/main/web</workingDirectory>
							<arguments>install</arguments>
						</configuration>
					</execution>

					<execution>
						<id>yarn install jhipster</id>
						<goals>
							<goal>yarn</goal>
						</goals>
						<configuration>
							<workingDirectory>src/main/jhipster</workingDirectory>
							<arguments>install</arguments>
						</configuration>
					</execution>

					<execution>
						<id>gulp clean</id>
						<goals>
							<goal>gulp</goal>
						</goals>

						<configuration>
							<workingDirectory>src/main/web</workingDirectory>
							<arguments>clean</arguments>
						</configuration>
					</execution>

					<execution>
						<id>gulp build</id>
						<goals>
							<goal>gulp</goal>
						</goals>

						<configuration>
							<!--FIXME tests breaks if not built first -->
							<!--<skip>${skipFrontEndBuild}</skip>-->
							<workingDirectory>src/main/web</workingDirectory>
							<!-- When the envConfig is set to 'release' then the JS and CSS files are minified -->
							<arguments>build</arguments>
							<arguments>--${envConfig}</arguments>
						</configuration>
					</execution>

					<execution>
						<id>jhipster build</id>
						<goals>
							<goal>yarn</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<skip>${skipFrontEndBuild}</skip>
							<workingDirectory>src/main/jhipster</workingDirectory>
							<arguments>run webpack:prod</arguments>
						</configuration>
					</execution>

					<execution>
						<id>javascript tests</id>
						<goals>
							<goal>karma</goal>
						</goals>
						<configuration>
							<workingDirectory>src/main/web</workingDirectory>
							<karmaConfPath>karma.conf.ci.js</karmaConfPath>
						</configuration>
					</execution>

					<execution>
						<id>javascript tests angular 2</id>
						<goals>
							<goal>karma</goal>
						</goals>
						<configuration>
							<workingDirectory>src/main/web</workingDirectory>
							<karmaConfPath>karma.conf-ng2.ci.js</karmaConfPath>
						</configuration>
